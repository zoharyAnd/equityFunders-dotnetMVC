@model cFunding.Models.user

@{
    ViewData["Title"] = "Delete";
}


<h2 class="pageTitle">Delete user</h2>

<section>
    <div class="container">

        <h3 class="error">Are you sure you want to delete this user ?</h3>

        <div class="row">
            <div class="col-sm-12">
                    <div class="bannerUserDetails">
                        <img src="/@Html.DisplayFor(model => model.userphoto)"/>
                        <h1>
                            @Html.DisplayFor(model => model.username)
                            <a asp-action="Edit" asp-route-id="@Model.id">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </h1>
                        <h3>@Html.DisplayFor(model => model.useremail)</h3>
                        <h4>@Html.DisplayFor(model => model.useraddress) -- @Html.DisplayFor(model => model.usercountry)</h4>
                        <h3>@Html.DisplayFor(model => model.companyname) Ltd</h3>
                    </div>
            </div>
        </div>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to User List</a>
        </form>

    </div>
</section>

    
    
    
